{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testMatch": ["**/test/**/*.e2e-spec.ts"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "globalSetup": "./test/setup-e2e.ts",
  "globalTeardown": "./test/teardown-e2e.ts",
  "testTimeout": 30000,
  "maxWorkers": 1,
  "coverageDirectory": "./coverage-e2e",
  "collectCoverageFrom": [
    "src/**/*.controller.ts",
    "src/**/*.service.ts",
    "!src/**/*.spec.ts",
    "!src/**/*.integration.spec.ts",
    "!src/**/*.e2e-spec.ts",
    "!src/main.ts"
  ]
}
